<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:id="@+id/my_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="사용자 별명"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/who3"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:id="@+id/my_email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="사용자의 이메일은 여기"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/my_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="서울"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/my_age"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="24세"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/my_gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="성별"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/male_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="남"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/female_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="10dp"
                android:text="여"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0C2A55"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="6">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="앉아 윗몸\n앞으로 굽히기"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="교차\n윗몸 일으키기"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="왕복\n오래달리기"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="왕복달리기"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:text="제자리\n멀리뛰기"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/average_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/after_check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/check_c1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/c1_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="금상"
                    android:textColor="#0C2A55"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/left_stroke"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="앉아 윗몸 앞으로 굽히기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/right_stroke"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/check_c2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/c2_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="금상"
                    android:textColor="#0C2A55"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/left_stroke"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="교차 윗몸 일으키기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/right_stroke"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/check_c3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/c3_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="금상"
                    android:textColor="#0C2A55"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/left_stroke"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="왕복오래달리기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/right_stroke"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/check_c4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/c4_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="금상"
                    android:textColor="#0C2A55"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/left_stroke"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="왕복달리기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/right_stroke"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/check_c5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="5dp"
                android:clickable="true">
                <TextView
                    android:id="@+id/c5_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="금상"
                    android:textColor="#0C2A55"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/left_stroke"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:text="제자리 멀리뛰기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/right_stroke"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/after_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:visibility="gone">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/total_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종합 금상입니다!"
                    android:textColor="#0C2A55"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="15dp"/>
                <ImageView
                    android:id="@+id/recheck_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/recheck"
                    android:clickable="true"/>
            </LinearLayout>
            <Button
                android:id="@+id/check_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="측정하기"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/color_round_layout"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 경쟁"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/no_match_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_match"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>