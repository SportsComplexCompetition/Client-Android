<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.2"
        android:background="#0C2A55">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소모임 개설하기"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="35dp"/>
            <EditText
                android:id="@+id/meeting_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_layout"
                android:layout_margin="10dp"
                android:hint="소모임 이름"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:paddingLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <Spinner
                    android:id="@+id/meeting_loc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:entries="@array/location"
                    android:background="@drawable/color_spinner_layout"/>
                <Spinner
                    android:id="@+id/meeting_pe"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/pe"
                    android:background="@drawable/color_spinner_layout"/>
            </LinearLayout>
            <EditText
                android:id="@+id/meeting_body"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:gravity="top"
                android:background="@drawable/round_layout"
                android:layout_margin="10dp"
                android:hint="소모임 설명"
                android:textColorHint="#000000"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:paddingTop="10dp"/>
            <EditText
                android:id="@+id/meeting_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="35dp"
                android:hint="소모임 연락처"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/make_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="개설하기"
        android:textColor="#0C2A55"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:clickable="true"/>
</LinearLayout>