<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/check_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="체력종목 이름"
        android:background="@drawable/bottom_stroke"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0C2A55">
        <TextView
            android:id="@+id/each_medal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 사용자는 참가상"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/rank_best"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="참가상 최고기록 :"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/best"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="100cm"
                android:textStyle="bold"
                android:textColor="#0C2A55"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/check_edit_layout"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/rank_worst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="참가상 최저기록 :"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/worst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="100cm"
                android:textStyle="bold"
                android:textColor="#0C2A55"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/check_edit_layout"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/rank_avg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="참가상 평균기록 :"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/avg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:text="100cm"
                android:textStyle="bold"
                android:textColor="#0C2A55"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/check_edit_layout"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="금상으로 올라가려면\n최소 5cm 늘려야합니다"
        android:textColor="#0C2A55"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"/>
</LinearLayout>